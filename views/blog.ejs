<!DOCTYPE html>
<html lang="en">
<head>
   <%-include('./partials/head.ejs')%>
    <title>Blogs</title>
</head>

<body>
    <%-include('./partials/nav.ejs')%>

    <div class="container mt-4">
        <h1><%=blog.title %></h1>
        <img src="<%=blog.coverImageURL%>" width="700px"/>
        <pre class="mt-3"><%= blog.body %></pre>
    </div>


    <div class="container mt-4">
        <img src="https://www.pngall.com/wp-content/uploads/5/Profile-PNG-Free-Download.png" width="50px"/> 
        <%=blog.createdBy.fullName%>
    </div>

  
    <!-- create div for comment -->
     <div class="container mt-3">
        <h1 style="font-size: large;">Comments (<%=comments.length%>)</h1>
            <% if(locals.user) { %>
                <form action="/blog/comment/<%=blog._id%>" method="post">
                    <div class="mb-3">
                      <input type="text" name="content"  class="form-control" placeholder="Enter your Comment.......">
                 </div>
                    <button type="submit" class="btn btn-primary">Addâž•</button>
                  </form>
                  <% } %>
                   <div class="mt-3" style="display:flex; flex-direction:column;gap:10px;" >
                    <% comments.forEach(comment => { %>
                     <div style="background-color:darkgrey; ">
                        <img src="https://www.pngall.com/wp-content/uploads/5/Profile-PNG-Free-Download.png" width="50px"/> <span style="color:blue"><%=comment.createdBy.fullName%></span>
                        
                    <pre style="font-weight:bold; margin:10px"><%=comment.content%></pre>
                    
                     </div>
                 
                    <% }) %>
                  </div>
     </div>
    <%-include('./partials/script.ejs') %>
</body>
</html>